{
    "manifest_version": 2,
    "name": "English Tutor",
    "description": "Extantion for learn english",
    "version": "1.0.0",
    "author": "Oleh Halay",

    "browser_action": {
        "default_popup": "index.html",
        "default_title": "English Tutor"
    },
    
   "permissions": [
       "contextMenus",
       "https://od-api.oxforddictionaries.com/",
       "identity",
       "identity.email"
   ],
   "icons" :{
       "16": "assets/icons/vocabulary.png",
       "48": "assets/icons/vocabulary.png",
       "128": "assets/icons/vocabulary.png"
   },
   "background": { 
      "scripts": [
          "assets/scripts/contextMenu.js",
          "assets/scripts/userInfo.js"
          ]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "assets/css/*",
        "assets/js/*",
        "assets/fonts/*"
    ],
    "options_ui": {
        // Required.
        "page": "assets/options/options.html",
        // Recommended.
        "chrome_style": true
        // Not recommended; only provided for backwards compatibility,
        // and will be unsupported in a future version of Chrome (TBD).
        //"open_in_tab": true
    }
}